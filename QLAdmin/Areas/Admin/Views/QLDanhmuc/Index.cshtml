@model IEnumerable<QLAdmin.Areas.Admin.Data.DanhmucVM>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">QUẢN LÝ PHÂN LOẠI</h2>

    <p>
        <a href="@Url.Action("AddDanhmuc", "QLDanhmuc")" class="btn btn-primary btn-sm">
            <i class="fa fa-plus"></i> Thêm mới
        </a>
    </p>
    <table class="table table-bordered ">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PhanLoaiID)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TenPhanLoai)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PhanLoaiID)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenPhanLoai)</td>
                    <td class="text-center">
                        <a href="@Url.Action("DetailDanhmuc", new { id = item.PhanLoaiID })" class="btn btn-info btn-sm" title="Chi tiết">
                            <i class="fa fa-info-circle"></i>
                        </a>
                        <a href="@Url.Action("EditDanhmuc", new { id = item.PhanLoaiID })" class="btn btn-warning btn-sm" title="Sửa">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="@Url.Action("DeleteDanhmuc", new { id = item.PhanLoaiID })" class="btn btn-danger btn-sm" title="Xóa">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

