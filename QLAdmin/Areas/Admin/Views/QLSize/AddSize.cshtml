@model QLAdmin.Areas.Admin.Data.KichthuocVM

@{
    ViewBag.Title = "AddSize";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Thêm Kích Thước</h2>

    @using (Html.BeginForm("AddSize", "QLSize", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thông Tin Kích Thước</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Size, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mt-3 text-end">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fa fa-plus"></i> Thêm
                    </button>
                    <a href="@Url.Action("Index", "QLSize")" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay về
                    </a>
                </div>
            </div>
        </div>
    }
</div>

