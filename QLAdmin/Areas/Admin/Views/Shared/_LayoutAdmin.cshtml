<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Areas/CSS/style.css">
</head>
<body>
    <div class="wrapper">
        <aside id="sidebar" class="js-sidebar">
            <!-- Sidebar content -->
            <div class="h-100">
                <div class="sidebar-logo">
                    <a href="#">SHOP ONLINE</a>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-item">
                        <a href="@Url.Action("Index","QLAdmin")" class="sidebar-link">
                            <i class="fa-solid fa-tachometer-alt pe-2"></i>
                            TRANG CHỦ
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="@Url.Action("QLNguoidung","QLNguoidung")" class="sidebar-link">
                            <i class="fa-regular fa-user pe-2"></i>
                            NGƯỜI DÙNG
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="@Url.Action("Index", "QLSize")" class="sidebar-link">
                            <i class="fa-solid fa-ruler-horizontal pe-2"></i>
                            SIZE
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="@Url.Action( "Index","QLDanhmuc")" class="sidebar-link">
                            <i class="fa-solid fa-th-list pe-2"></i>
                            PHÂN LOẠI
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="@Url.Action("Index", "QLSanpham")" class="sidebar-link">
                            <i class="fa-solid fa-box-open pe-2"></i>
                            SẢN PHẨM
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="@Url.Action("Index", "QLDonhang")" class="sidebar-link">
                            <i class="fa-solid fa-receipt pe-2"></i>
                            ĐƠN HÀNG
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="@Url.Action("Index", "QLThongke")" class="sidebar-link">
                            <i class="fa-solid fa-chart-line pe-2"></i>
                            THỐNG KÊ
                        </a>
                    </li>
                </ul>
            </div>

        </aside>
        <div class="main">
            <nav class="navbar navbar-expand px-3 border-bottom">
                <button class="btn" id="sidebar-toggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                                <img src="~/Areas/img/tải xuống (1).jpg" class="avatar img-fluid rounded-circle" alt="">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Logout", "Account")" class="nav-link">
                                <i class="fas fa-sign-out-alt fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="content px-3 py-2">
                <div>
                    @RenderBody()
                </div>
            </main>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a href="#" class="text-muted">
                                    <strong>yenduy</strong>
                                </a>
                            </p>
                        </div>

                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <script src="~/Areas/JS/script.js"></script>
</body>
</html>
